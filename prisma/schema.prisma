// Exemplo de model Prisma (User)
// Após definir, rode: npx prisma migrate dev --name init

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Matricula {
  id        Int        @id @default(autoincrement())
  valor     String     @unique
  usuario   Usuario? // Relacionamento reverso, não precisa de fields/references aqui
  acidentes  Acidente[]
  deletedAt   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Usuario {
  id          Int        @id @default(autoincrement())
  nome        String
  telefone    String
  estado      Boolean    @default(true)
  email       String     @unique
  password    String
  matriculaId Int?       @unique // FK para Matricula, precisa ser único para 1:1
  matricula   Matricula? @relation(fields: [matriculaId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?
}

model Acidente {
  id              Int       @id @default(autoincrement())
  matriculaId     Int
  matricula       Matricula @relation(fields: [matriculaId], references: [id])
  hora            String
  data            DateTime
  descricao       String?
  ativados        String
  status_acidente String
  velocidade     Int
  latitude       Float
  longitude      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model Agencia {
  id         Int       @id @default(autoincrement())
  id_usuario Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
}

model Parceiro {
  id        Int       @id @default(autoincrement())
  nome      String
  telefone  String
  servico   String
  lat       Float
  lon       Float
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model SegurosAppUsuario {
  id        Int       @id @default(autoincrement())
  nome      String
  telefone  String
  matricula String
  estado    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Mensagem {
  id         Int       @id @default(autoincrement())
  texto      String
  titulo     String
  lida       Boolean   @default(false)
  id_usuario Int
  resposta   String    @default("pendente")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
}
